{
  /* https://www.typescriptlang.org/tsconfig */
  /* Most option copied from vscode.git/extensions/shared.tsconfig.json */
  /* The maps are used for debugging only. */
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "target": "es2018",
    "lib": [
      "es2018"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "module": "commonjs",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests/tap/*.d.ts"
  ]
}
